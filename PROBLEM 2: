PROBLEM 2: Read name and print it. 

#include <iostream>
#include <string>
using namespace std; 

string ReadName() {

	string Name;
	cout << "Enter Your Name" << endl; 
	getline(cin, Name);
	return Name; 
}

void PrintName(string Name) {

	cout << endl << "Your name is: " << Name << endl; 
}


int main() {

	PrintName(ReadName());
	
	return 0; 
}
